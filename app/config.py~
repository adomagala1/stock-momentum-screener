import os
from pydantic_settings import BaseSettings

class Settings(BaseSettings):
    # Mongo
    mongo_uri: str
    mongo_db: str

    # Postgres
    pg_user: str
    pg_password: str
    pg_host: str
    pg_port: int
    pg_db: str

    # Supabase
    sb_url: str
    sb_api: str
    sb_password: str

    class Config:
        env_file = os.path.join(os.path.dirname(os.path.abspath(__file__)), '..', '.env')
        env_file_encoding = 'utf-8'
        extra = "ignore"

# Teraz Pydantic sam wczyta z env
settings = Settings()
