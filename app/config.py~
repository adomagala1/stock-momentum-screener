import os
from pydantic_settings import BaseSettings, SettingsConfigDict

class Settings(BaseSettings):
    # Mongo
    mongo_uri: str
    mongo_db: str

    # Postgres
    pg_user: str
    pg_password: str
    pg_host: str
    pg_port: int
    pg_db: str

    # Supabase (aliasy dla zmiennych Å›rodowiskowych)
    sb_url: str
    sb_api: str
    sb_password: str

    model_config = SettingsConfigDict(
        env_file=os.path.join(os.path.dirname(os.path.abspath(__file__)), '..', '.env'),
        env_file_encoding='utf-8'
    )

    # Mapowanie nazw env na pola
    def __init__(self, **kwargs):
        kwargs.setdefault('sb_url', os.getenv('SUPABASE_URL'))
        kwargs.setdefault('sb_api', os.getenv('SUPABASE_KEY'))
        kwargs.setdefault('sb_password', os.getenv('SB_PASSWORD'))
        super().__init__(**kwargs)

settings = Settings()
