# app/config.py
import os
from pydantic_settings import BaseSettings

class Settings(BaseSettings):
    # Mongo
    mongo_uri: str
    mongo_db: str

    # Postgres
    pg_user: str
    pg_password: str
    pg_host: str
    pg_port: int
    pg_db: str

    class Config:
        env_file = os.path.join(os.path.dirname(os.path.abspath(__file__)), '..', '.env')
        env_file_encoding = 'utf-8'
        extra = "ignore"  # ignoruje dodatkowe wartości w .env

# Supabase nie jest częścią Settings, pobieramy bezpośrednio z os.environ
SUPABASE_URL = os.environ.get("SUPABASE_URL") or os.environ.get("SB_URL")
SUPABASE_KEY = os.environ.get("SUPABASE_KEY") or os.environ.get("SB_API")
SB_PASSWORD = os.environ.get("SB_PASSWORD")
